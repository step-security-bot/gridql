{
  "graphlettes": [
    {
      "path": "/hens",
      "mongo": "hens",
      "schema": "test/graph/hens.graphql",
      "dtoConfig": {
        "singletons": [
          {
            "name": "getById",
            "id": "id",
            "query": "({_id: new ObjectId('${id}')})"
          }
        ],
        "scalars": [
          {
            "name": "getByCoop",
            "id": "coop_id",
            "query": "({coop_id: \"${id}\"})"
          }
        ],
        "resolvers": [
          {
            "name": "coops",
            "id": "coop_id",
            "queryName": "getById",
            "url": "http://localhost:40001/coops"
          }
        ]
      }},
    {
      "path": "/coops",
      "mongo": "coops",
      "schema": "test/graph/coops.graphql",
      "dtoConfig": {
        "singletons": [
          {
            "name": "getById",
            "id": "id",
            "query": "({_id: new ObjectId('${id}')})"
          }
        ],
        "scalars": [
          {
            "name": "getByFarm",
            "id": "id",
            "query": "({farm_id: \"${id}\"})"
          }
        ]
      },
      "resolvers": [
        {
          "name": "hens",
          "id": "_id",
          "queryName": "getByCoop",
          "url": "http://localhost:40001/hens"
        },
        {
          "name": "farms",
          "id": "_id",
          "queryName": "getById",
          "url": "http://localhost:40001/farms"
        }
      ]
    },
    {
      "path": "/farms",
      "mongo": "farms",
      "schema": "test/graph/farms.graphql",
      "dtoConfig": {
        "singletons": [
          {
            "name": "getById",
            "id": "id",
            "query": "({_id: new ObjectId('${id}')})"
          },
          {
            "name": "getByName",
            "id": "name",
            "query": "{name: \"${id}\"}"
          }
        ],
        "resolvers": [
          {
            "name": "coops",
            "id": "_id",
            "queryName": "getByFarm",
            "url": "http://localhost:40001/coops"
          }
        ]
      }
    }
  ],
  "restlettes": [
    {
      "path": "/hens",
      "mongo": "hens",
      "schema": "test/json/hen.schema.json"
    },
    {
      "path": "/coops",
      "mongo": "coops",
      "schema": "test/json/coop.schema.json"
    },
    {
      "path": "/farms",
      "mongo": "farms",
      "schema": "test/json/farm.schema.json"
    }
  ]
}